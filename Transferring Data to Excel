import os
import pandas as pd
folder_path = r"C:/Users/aryam/Downloads/SeniorResProj/ImportantFile"

def process_file(file_path):
  with open(file_path, 'r') as file:
    lines = file.readlines()
    data = [line.split() for line in lines]
    df = pd.DataFrame(data)
  return df

for filename in os.listdr(folder_path):
  file_path = os.path.join(folder_path, filename)
  if os.path.isfile(file_path):
    file_data = process_file(file_path)
    output_excel_file = os.path.join(folder_path, f"{os.path.splitext(filename)[0]}.xlsx")
    file_data.to_excel(output_excel_file, index = False, header = False)
    print(f"Data from '{filename}' has been written to '{output_excel_file}' successfully.")
